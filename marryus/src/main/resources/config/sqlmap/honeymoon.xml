	<select id="selectHoneymoonCount" resultType="int">
		select count(*)
		from mu_company_info
		where com_info_type = 'h'
	</select>
	
	
	<!-- 역경매 리스트 -->
	<select id="auctionList" parameterType="Page" resultMap="auctionMap">
		select @rownum:=@rownum+1 as no, a.*	 
		from mu_auction a, (select @rownum:=0) TMP
		 where a.auction_type = 'h'
		 order by a.auction_no desc
		 limit #{begin}, 10
	</select>
	
	<select id="selectAuctionCount" resultType="int">
		select count(*)
		from mu_auction
		where auction_type = 'h'
	</select>
	
	
	<select id="searchHoneymoon" parameterType="Search" resultMap="auctionMap">
		select @rownum:=@rownum+1 as no, a.*	 
		from mu_auction a, (select @rownum:=0) TMP
		 <if test="type != ''" >
		 	<choose>
		 		<when test="type==1">
		 			where auction_type like concat('%', #{content}, '%')
		 		</when>
		 		<when test="type==2">
		 			where auction_status like concat('%', #{content}, '%')
		 		</when>
		 		<when test="type==3">
		 			where auction_sdate like concat('%', #{content}, '%')
		 		</when>
		 		<otherwise>
		 			and auction_edate like concat('%', #{content}, '%')
		 		</otherwise>
	 		</choose>
		 </if>
		 order by a.com_info_no desc
		 limit #{begin}, 10
	</select>
	
	
	<select id="selectHoneySearchCnt" parameterType="Search" resultType="int">
		select count(*)
		  from mu_auction
		 <if test="type != ''">
		 	<choose>
		 		<when test="type==1">
		 			where auction_type like concat('%', #{content}, '%')
		 		</when>
		 		<when test="type==2">
		 			where auction_status like concat('%', #{content}, '%')
		 		</when>
		 		<when test="type==3">
		 			where auction_sdate like concat('%', #{content}, '%')
		 		</when>
		 		<otherwise>
		 			and auction_edate like concat('%', #{content}, '%')
		 		</otherwise>
		 	</choose>
		 </if>
	</select>
	
	
